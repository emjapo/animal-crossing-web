extends layout/layout.pug

block title
    title Create Account
    
block content
    form(method="POST" action="/newAccount")
        label Username:
            input(type="text" name="username")
        label Password:
            input(type="password" name="password")
        label Name:
            input(type="text" name="name")
        input(type="radio" name="image" value="images/girl.svg")
            img(src="images/girl.svg", alt="girl icon i had on hand")
        input(type="radio" name="image" value="images/boy.svg")
            img(src="images/boy.svg", alt="boy icon i had on hand")
        input(type="submit" value="Submit")